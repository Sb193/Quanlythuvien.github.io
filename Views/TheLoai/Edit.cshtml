@model QuanLyThuVien.Models.TheLoai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý thể loại</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">

        <div class="card-header bg-primary">
            <h4 class="font-weight-bold text-white m-1">Sửa thông tin</h4>
        </div>

        <div class="card-body">

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaTL)

                <div class="form-group">
                    @Html.LabelFor(model => model.TenTL, "Tên thể loại", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group d-flex align-items-center">
                <div class="col-md-offset-2 col-md-5 text-right">
                    <input type="submit" value="Lưu" class="btn btn-primary pl-3 pr-3" />
                </div>

                <div class="col-md-offset-2 col-md-5 ">
                    @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-default h4 pl-3 pr-3" })
                </div>
            </div>

        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
