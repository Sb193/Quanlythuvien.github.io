
@{
    ViewBag.Title = "Infor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var staffDetails = Session["staff"] as QuanLyThuVien.Models.NhanVien;
    var user = Session["user"] as QuanLyThuVien.Models.TaiKhoan;
    string Birth = staffDetails.Nguoi.NgaySinh.Day.ToString() + "/" + staffDetails.Nguoi.NgaySinh.Month.ToString() + "/" + staffDetails.Nguoi.NgaySinh.Year.ToString();
}

<div class="card-body p-4 mb-4 bg-white border-0 shadow rounded">
    <h4 class="mb-4 card-header bg-primary text-white">Thông tin cá nhân</h4>
    <form class="card-body">
        <div class="form-row">
            <div class="form-group col-sm-6">
                <label for="myName">Họ và Tên</label>
                <input type="text" class="form-control"
                       id="myName" placeholder="@staffDetails.Nguoi.HoTen" readonly>
            </div>
            <div class="form-group col-sm-6">
                <label for="myBirth">Ngày sinh</label>
                <input type="text" class="form-control"
                       id="myBirth" placeholder="@Birth" readonly>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Địa chỉ</label>
            <input type="text" class="form-control"
                   id="myAddress" placeholder="@staffDetails.Nguoi.DiaChi" readonly>
        </div>
        <div class="form-group">
            <label for="inputPhone">Số điện thoại</label>
            <input type="text" class="form-control"
                   id="myPhone" placeholder="@staffDetails.Nguoi.Sdt" readonly>
        </div>

        <div class="form-row">
            @if (user.LoaiTK == 1)
            {


                <div class="form-group col-sm-3">
                    <label for="myCity">Chức vụ</label>
                    <input type="text" class="form-control" id="myCity" placeholder="Nhân viên" readonly>
                </div>
            }
            else
            {
                <div class="form-group col-sm-3">
                    <label for="myCity">Chức vụ</label>
                    <input type="text" class="form-control" id="myCity" placeholder="Admin" readonly>
                </div>
            }
            <div class="form-group col-sm-3">
                <label for="myId">Mã nhân viên</label>
                <input type="text" class="form-control" id="myId" placeholder="@staffDetails.MaNV" readonly>
            </div>
            <div class="form-group col-sm-3">
                <label for="myAcc">Tài khoản</label>
                <input type="text" class="form-control" id="myAcc" placeholder="@user.TaiKhoan1" readonly>
            </div>
            <div class="form-group col-sm-3">
                <label for="myZip">Mật khẩu</label>
                <input type="text" class="form-control" id="myZip" placeholder="@user.MatKhau" readonly>
            </div>
        </div>

        <!--<button type="submit" class="btn btn-primary">Submit</button>-->
    </form>
</div>

