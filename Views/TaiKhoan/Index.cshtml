@model IEnumerable<QuanLyThuVien.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý tài khoản</h2>

<div class="card shadow mb-4">

    <div class=" form-row card-header m-0">
        <h4 class="font-weight-bold text-primary col-sm-6 mt-1">Danh sách tài khoản</h4>
        <div class=" col-sm-6 text-right justify-content-center mt-2">
            <i class="fa fa-plus text-primary"></i>
            @Html.ActionLink("Tạo tài khoản", "Create", "TaiKhoan", null, new { @class = "font-weight-bold text-primary  text-decoration-none h5" })
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="text-center">
                    <tr>
                        <th>Username</th>
                        <th>Mật khẩu</th>
                        <th>Mã nhân viên</th>
                        <th>Loại tài khoản</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot class="text-center">
                    <tr>
                        <th>Username</th>
                        <th>Mật khẩu</th>
                        <th>Mã nhân viên</th>
                        <th>Loại tài khoản</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaiKhoan1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiTK1.name)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.TaiKhoan1 }) |


                                @Html.ActionLink("Xóa", "Delete", new { id = item.TaiKhoan1 })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <!-- Page level plugins -->
    @Scripts.Render("~/vendor/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/vendor/datatables/dataTables.bootstrap4.min.js")

    <!-- Page level custom scripts -->
    @Scripts.Render("~/js/demo/datatables-demo.js")
}
