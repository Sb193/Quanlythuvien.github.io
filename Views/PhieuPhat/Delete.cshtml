                    <input type="submit" value="Xóa" class="btn btn-danger pl-3 pr-3" />
                </div>

                <div class="col-md-offset-2 col-md-6 ">
                    @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-default h4 pl-3 pr-3" })
